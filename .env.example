# =====================================================
# HELSEPLATTFORM ENVIRONMENT VARIABLES
# =====================================================
# Copy this file to .env and fill in your values
# For Netlify: Add these in Site settings â†’ Environment variables
# =====================================================

# =====================================================
# SUPABASE CONFIGURATION (Required)
# =====================================================
# Get these from your Supabase project dashboard
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://your-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# =====================================================
# ID-PORTEN CONFIGURATION
# =====================================================
# Get these values from your ID-porten integration
# https://samarbeid.digdir.no/

# --- TEST ENVIRONMENT ---
# Use these for development and testing
VITE_IDPORTEN_ISSUER=https://test.idporten.no
VITE_IDPORTEN_AUTH_ENDPOINT=https://test.idporten.no/authorize
VITE_IDPORTEN_TOKEN_ENDPOINT=https://test.idporten.no/token
VITE_IDPORTEN_USERINFO_ENDPOINT=https://test.idporten.no/userinfo
VITE_IDPORTEN_LOGOUT_ENDPOINT=https://test.idporten.no/endsession

# --- PRODUCTION ENVIRONMENT ---
# Uncomment these for production deployment
# VITE_IDPORTEN_ISSUER=https://idporten.no
# VITE_IDPORTEN_AUTH_ENDPOINT=https://idporten.no/authorize
# VITE_IDPORTEN_TOKEN_ENDPOINT=https://idporten.no/token
# VITE_IDPORTEN_USERINFO_ENDPOINT=https://idporten.no/userinfo
# VITE_IDPORTEN_LOGOUT_ENDPOINT=https://idporten.no/endsession

# Your ID-porten Client Credentials
VITE_IDPORTEN_CLIENT_ID=your_client_id_here
VITE_IDPORTEN_CLIENT_SECRET=your_client_secret_here

# Redirect URI (must match what's registered in ID-porten)
# Local development:
VITE_IDPORTEN_REDIRECT_URI=http://localhost:3000/auth/callback
# Netlify (update with your actual Netlify URL):
# VITE_IDPORTEN_REDIRECT_URI=https://your-site.netlify.app/auth/callback
# Production (update with your actual domain):
# VITE_IDPORTEN_REDIRECT_URI=https://helseplattform.no/auth/callback

# =====================================================
# OPTIONAL CONFIGURATION
# =====================================================

# Enable mock mode for development without real ID-porten
# Set to 'true' to use mock authentication
VITE_MOCK_AUTH=true

# Application URL (used for various redirects)
VITE_APP_URL=http://localhost:3000
# For Netlify: VITE_APP_URL=https://your-site.netlify.app